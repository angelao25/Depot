<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td class="text-right">
    <%= button_to 'Decrease Item quantity', line_items_path(product_id: line_item.product),
    form_class: 'inline',
    class: 'ml-2 rounded-lg py-1 px-2 text-black bg-yellow-400' %>
  </td>
  <td class="text-right">
    <%= button_to 'Delete Item', line_item, method: :delete, class: 'ml-4 rounded-lg py-1 px-2 text-black bg-blue-400' %>
  </td>
</tr>
